<?xml version="1.0"?>
<ruleset name="PHP_CodeSniffer">
 <description>The coding standard.</description>

 <file>src/</file>
 <file>tests/</file>

 <exclude-pattern>*/node_modules/*</exclude-pattern>

 <arg value="np"/>
 <arg value="s"/>

 <!-- Check only php files -->
 <arg name="extensions" value="php"/>

 <rule ref="PSR2"/>
</ruleset>
