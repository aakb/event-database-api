{% extends 'AdminBundle::base.html.twig' %}

{% block body -%}
    <h1>Feed</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ entity.url }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ entity.type }}</td>
            </tr>
            <tr>
                <th>Root</th>
                <td>{{ entity.root }}</td>
            </tr>
            <tr>
                <th>Mapping</th>
                <td style="white-space: pre">{{ entity.mapping | json_encode }}</td>
            </tr>
            <tr>
                <th>Lastread</th>
                <td>{{ entity.lastRead ? (entity.lastRead | date('Y-m-d H:i:s')) : 'â€“' }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('admin_feed') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_feed_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
